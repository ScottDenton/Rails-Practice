<div>
  <div class='new_posting_form'>
    <%= form_tag postings_path do%>
      <div>
        <%= label_tag :position %>
        <%= text_field_tag :position %>
      </div>
      <div>
        <%= label_tag :location %>
        <%= text_field_tag :location %>
      </div>
      <div>
        <%= label_tag :job_description %>
        <%= text_area_tag :job_description %>
      </div>
      <div>
        <%= label_tag :company_id %>
        <%= select_tag :company_id, options_from_collection_for_select(@companies, :id, :name) %>
      </div>

      <%= submit_tag "Submit" %>
    <% end %>
  </div>


  <div><%= link_to "Back to all Postings", postings_path %></div>

</div>
